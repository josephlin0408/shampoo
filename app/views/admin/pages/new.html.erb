<body class="notransition">
  <!-- Header -->
  <%= render 'admin/common/header' %>
  <!-- Header End -->
  <!-- Left Side Navigation -->    
  <%= render 'admin/common/menu' %>
  <!-- Left Side Navigation End -->
  <!-- Content -->
	<div id="wrapper" class="full">
	  <div id="mapView" class="min"><div class="mapPlaceholder"><span class="fa fa-spin fa-spinner"></span> Loading map...</div></div>
	  <div id="content" class="max">
	    <div class="tables">
	      <h4>新增文案</h4>      
	      <div class="row">
	        <div class="col-xs-12">
	          <div class="panel panel-default">	            
	            <div class="panel-body">
	              <%= bootstrap_form_for @page, url: admin_pages_path(@page) do |n| %>
	              	<div class="form-group">
	              		<%= n.submit '送出', class: :"btn btn-round btn-green" %>
	              		<%= link_to('返回', admin_pages_path, class: :"btn btn-round btn-green") %>
	              	</div>
	                <div class="form-group">	                	
  									<%= n.cktext_area :content, :ckeditor => {:language => 'uk'}, :cols => 40, :ckeditor => {:uiColor => '#AADC6E', :toolbar => 'mini'}  %>
	                </div>  
	              <% end %>                                    
	            </div>
	          </div>
	        </div>
	      </div>
	    </div>
	  </div>
	  <div class="clearfix"></div>
	</div>
  <!-- Content End-->
</body>